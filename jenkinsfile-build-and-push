node {
    stage('clone repo') {
        checkout scm
    }

    stage('Build') {

            sh 'chmod +x gradlew'
            sh  './gradlew clean build -x test'
            sh 'ls -al ./build'

    }

    stage('dockerized') {
        app = docker.build("haedoang/cicd_study")
    }

    stage('deploy') {
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhubid') {
            app.push("latest");
        }
    }
}
