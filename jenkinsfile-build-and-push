node {
    stage('clone repo') {
        checkout scm
    }

    stage('Build') {
        steps {
            sh 'chmod +x gradlew'
            sh  './gradlew clean build -x test'
            sh 'ls -al ./build'
        }
    }

    stage('dockerized') {
        steps{
            sh 'docker build . -t haedoang/cicd-study'
        }
    }

    stage('deploy') {
        steps {
           sh 'docker run --name cicd_study -d -p 8080:8080 haedoang/cicd_study'
        }
    }
}